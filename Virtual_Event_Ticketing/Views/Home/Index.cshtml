@model List<WebApplication1.Models.Event>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <h1 class="display-4 fw-bold mb-3">Welcome to EventPortal</h1>
    <p class="lead mb-4">
        Discover events, buy tickets, and manage your upcoming experiences — all in one portal.
    </p>

    <a class="btn btn-primary btn-lg" asp-controller="Events" asp-action="Index">
        Browse Events
    </a>
</div>

<hr />

<div class="container mt-5">
    <h2 class="mb-3">Featured Events</h2>

    @if (ViewBag.FeaturedEvents != null)
    {
        <div class="row">
            @foreach (var ev in ViewBag.FeaturedEvents)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@ev.ImageUrl" class="card-img-top" alt="@ev.Title">
                        <div class="card-body">
                            <h5 class="card-title">@ev.Title</h5>
                            <p class="card-text text-muted">
                                @ev.Category • @ev.StartDate.ToLocalTime():g
                            </p>
                            <a class="btn btn-outline-primary w-100"
                               asp-controller="Events"
                               asp-action="Details"
                               asp-route-id="@ev.Id">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No featured events available.</p>
    }
</div>

<h2>Upcoming Events</h2>

@foreach (var e in Model)
{
    <div class="card mb-3 p-3">
        <h4>@e.Title</h4>
        <p>@e.Description</p>
        <p><strong>Date:</strong> @e.StartDate.ToLocalTime()</p>
        <p><strong>Location:</strong> @e.Location</p>

        <a asp-controller="Events" asp-action="Details" asp-route-id="@e.Id"
           class="btn btn-primary">View Details</a>
    </div>
}

