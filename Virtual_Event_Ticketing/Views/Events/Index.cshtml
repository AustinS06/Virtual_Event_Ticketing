@model IEnumerable<WebApplication1.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2 class="fw-bold mb-4">Browse Events</h2>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search events..." name="search" value="@Context.Request.Query["search"]" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (!Model.Any())
{
    <p>No events found.</p>
}
else
{
    <div class="row">
    @foreach (var ev in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@ev.Title</h5>

                    <p class="text-muted">
                        @ev.Category • @ev.StartDate.ToLocalTime():g
                    </p>

                    <a class="btn btn-outline-primary w-100 mb-2"
                       asp-controller="Events"
                       asp-action="Details"
                       asp-route-id="@ev.Id">
                        View Details
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-primary w-100"
                           asp-controller="Tickets"
                           asp-action="Buy"
                           asp-route-id="@ev.Id">
                            Buy Tickets
                        </a>
                    }
                </div>
            </div>
        </div>
    }
    </div>
}